<UserControl x:Class="WinQuickLook.Controls.VideoFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <MediaElement x:Name="mediaElement" Source="{Binding FileInfo.Value.FullName}" ScrubbingEnabled="True" LoadedBehavior="Manual" />
    </Grid>
</UserControl>
