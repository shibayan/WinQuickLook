<Application x:Class="WinQuickLook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:properties="clr-namespace:WinQuickLook.Strings"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <tb:TaskbarIcon x:Key="NotifyIcon"
                        Visibility="Visible"
                        ToolTipText="WinQuickLook"
                        IconSource="/Icon.ico"
                        MenuActivation="RightClick"
                        TrayMouseDoubleClick="NotifyIcon_TrayMouseDoubleClick"
                        ContextMenuOpening="ContextMenu_ContextMenuOpening">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static properties:Resources.AutoStartText}" Click="AutoStartMenuItem_Click" />
                    <Separator />
                    <MenuItem Header="{x:Static properties:Resources.ExitText}" Click="ExitMenuItem_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>
