<Application x:Class="WinQuickLook.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:app="clr-namespace:WinQuickLook.App"
             xmlns:viewModels="clr-namespace:WinQuickLook.App.ViewModels"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>

        <tb:TaskbarIcon x:Key="NotifyIcon"
                        Visibility="Visible"
                        ToolTipText="{x:Static app:AppParameters.Title}"
                        IconSource="/Icon.ico"
                        MenuActivation="RightClick"
                        DoubleClickCommand="{Binding ActivateCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Launch on Login" IsCheckable="True" Command="{Binding LaunchOnLoginCommand}" />
                    <Separator />
                    <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
            <tb:TaskbarIcon.DataContext>
                <viewModels:NotifyIconViewModel />
            </tb:TaskbarIcon.DataContext>
        </tb:TaskbarIcon>

    </Application.Resources>
</Application>
